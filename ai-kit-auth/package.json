{
  "name": "ai-kit-auth",
  "version": "0.0.1",
  "description": "Out of the box login capability in combination with django-ai-kit-auth",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "lint": "eslint 'src/**/*.{tsx,ts}'",
    "stylelint": "./node_modules/.bin/stylelint 'src/**/*.scss'",
    "postpack": "cp -f ai-kit-auth-*.tgz ../demo/frontend/ai-kit-auth.tgz && rm ai-kit-auth-*.tgz"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.ambient-innovation.com/ai/ai.kit/authentication.git"
  },
  "keywords": [
    "login",
    "react",
    "material-ui"
  ],
  "author": "Ambient Innovation",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.2",
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/gitlab": "^6.0.2",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.2",
    "@types/react": "^16.9.20",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-unicorn": "^16.1.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "react-dom": "^16.12.0",
    "semantic-release": "^17.0.4",
    "stylelint": "^10.1.0",
    "stylelint-config-awzome": "^1.1.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist/**/*"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(.*/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "tagFormat": "frontend_v${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "scope": "!*react*",
              "release": false
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/gitlab",
        {
          "gitlabUrl": "https://gitlab.ambient-innovation.com/",
          "assets": [
            {
              "path": "dist/**/*.js",
              "label": "JS"
            },
            {
              "path": "dist/**/*.d.ts",
              "label": "TS"
            }
          ]
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
