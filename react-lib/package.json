{
  "name": "ai-kit-auth",
  "version": "0.1.0",
  "description": "Out of the box login capability in combination with django-ai-kit-auth",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "types": "dist/index.d.ts",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx,json",
      "quiet": false
    }
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.esm.json",
    "lint": "eslint 'src/**/*.{tsx,ts}'",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.ambient-innovation.com/ai/ai.kit/authentication.git"
  },
  "keywords": [
    "login",
    "react",
    "material-ui"
  ],
  "author": "Ambient Innovation",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "camelcase-keys": "^6.2.2",
    "use-debounce": "^8.0.3"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.9.0",
    "@material-ui/icons": "^4.9.0",
    "next": "^10.0.0",
    "react": "^16.8.0|^17.0.0",
    "react-router-dom": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@semantic-release/gitlab": "^6.0.9",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.5.0",
    "@types/axios-mock-adapter": "^1.10.0",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "axios-mock-adapter": "^1.19.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jest-dom": "^3.8.0",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^16.1.1",
    "history": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "next": "^10.1.3",
    "npm-watch": "^0.9.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "files": [
    "dist/**/*",
    "esm/**/*"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*/tests/.*\\.test\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "tagFormat": "react_v${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "scope": "!*react*",
              "release": false
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/gitlab",
        {
          "gitlabUrl": "https://gitlab.ambient-innovation.com/",
          "assets": []
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
